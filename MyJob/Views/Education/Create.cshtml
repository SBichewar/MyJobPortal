@model DAL.TblEducation
@{
    Layout = "~/Views/Shared/NoramlLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>MyJob- New and best job portal</title>
    <!-- css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/css/style.css" rel="stylesheet" />*@
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "http://localhost:53763/Education/GetQualification",
                datatype: "json",
                traditional: true,
                success: function (data) {
                    if (data != null) {
                        var p_Upcomingobj = JSON.parse(data);
                        var district  = district + '<option>Select Hire Qualification</option>';
                        for (i in p_Upcomingobj) {
                            district = district + '<option value=' + p_Upcomingobj[i].QualificationId + '>' + p_Upcomingobj[i].QualificationName + '</option>';
                        }
                        district = district + '</select>';
                        $('#Qualification').html(district);
                    }
                }
            });


            $.ajax({
                type: "GET",
                url: "http://localhost:53763/Education/GetEducationType",
                datatype: "json",
                traditional: true,
                success: function (data) {
                    if (data != null) {
                        var p_Upcomingobj = JSON.parse(data);
                        var district = district + '<option >Select  EducationType</option>';
                        for (i in p_Upcomingobj) {
                            district = district + '<option value=' + p_Upcomingobj[i].EducationTypeId + '>' + p_Upcomingobj[i].EducationType + '</option>';
                        }
                        district = district + '</select>';
                        $('#EducationType').html(district);
                    }
                }
            });
        });
    </script>
</head>
<body>
    <div id="wrapper">
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <h4>EdgucationMst</h4>
                                <hr class="colorgraph" />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="form-group">
                                    @Html.EditorFor(x => x.CollageName, new { htmlAttributes = new { @class = "form-control input-md", placeholder = "CollageName" } })
                                    @Html.ValidationMessageFor(model => model.CollageName, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.StartMonth, new List<SelectListItem>
                                         {
                                            new SelectListItem{ Text="Select Edgucation Start Month"},
                                            new SelectListItem{ Text="January", Value = "1" },
                                            new SelectListItem{ Text="February", Value = "2" },
                                            new SelectListItem{ Text="March", Value = "3" },
                                            new SelectListItem{ Text="April", Value = "4" },
                                            new SelectListItem{ Text="May", Value = "5" },
                                            new SelectListItem{ Text="June", Value = "6" },
                                            new SelectListItem{ Text="July", Value = "7" },
                                            new SelectListItem{ Text="Augast", Value = "8" },
                                            new SelectListItem{ Text="September", Value = "9" },
                                            new SelectListItem{ Text="Octomer", Value = "10" },
                                            new SelectListItem{ Text="November", Value = "11" },
                                            new SelectListItem{ Text="December", Value = "12" }
                                         }, new { @id = "StartMonth", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })


                                    @Html.ValidationMessageFor(model => model.StartMonth, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">

                                    @* @Html.DropDownList("Country", ViewBag.Country as IEnumerable<SelectListItem>, "Select", new { htmlAttributes = new { @class = "form-control ListWidth" }, @style = "width: 100%;    padding: 5px; border: 1px solid #ccc;border-radius: 4px;" })*@
                                    @Html.DropDownListFor(x => x.StartYear, ViewBag.Year as IEnumerable<SelectListItem>, "Select start year", new { @id = "StartYear", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })
                                    @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.PassingMonth, new List<SelectListItem>
                                         {
                                            new SelectListItem{ Text="Select Passing Month"},
                                            new SelectListItem{ Text="January", Value = "1" },
                                            new SelectListItem{ Text="February", Value = "2" },
                                            new SelectListItem{ Text="March", Value = "3" },
                                            new SelectListItem{ Text="April", Value = "4" },
                                            new SelectListItem{ Text="May", Value = "5" },
                                            new SelectListItem{ Text="June", Value = "6" },
                                            new SelectListItem{ Text="July", Value = "7" },
                                            new SelectListItem{ Text="Augast", Value = "8" },
                                            new SelectListItem{ Text="September", Value = "9" },
                                            new SelectListItem{ Text="Octomer", Value = "10" },
                                            new SelectListItem{ Text="November", Value = "11" },
                                            new SelectListItem{ Text="December", Value = "12" }
                                         }, new { @id = "PassingMonth", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })

                                    @Html.ValidationMessageFor(model => model.PassingMonth, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.PassingYear, ViewBag.Year as IEnumerable<SelectListItem>, "Select passing year", new { @id = "PassingYear", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })
                                    @Html.ValidationMessageFor(model => model.PassingYear, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.EducationType, new List<SelectListItem>(), "Select EducationType", new { @id = "EducationType", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc;border-radius: 4px;" })
                                    @Html.ValidationMessageFor(model => model.EducationType, "", new { @class = "text-danger" })
                                </div>

                                <hr class="colorgraph">
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn  btn-success btn-block pull-left btn-md" />
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </section>
    </div>
</body>

</html>

@{Html.EnableClientValidation(true);}
@{Html.EnableUnobtrusiveJavaScript(true);}