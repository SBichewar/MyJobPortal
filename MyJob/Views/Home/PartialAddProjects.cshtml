@model DAL.TblProject

@using (Html.BeginForm("PartialAddProjects", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ProjectDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextAreaFor(model => model.ProjectDetails, new { htmlAttributes = new { @class = "form-control" }, @style = "width: 100%;" })
                @Html.ValidationMessageFor(model => model.ProjectDetails, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.StartYear, ViewBag.Year as IEnumerable<SelectListItem>, "Working Seance Year", new { @id = "StartYear", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })
                @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.StartMonth, new List<SelectListItem>
                                         {
                                            new SelectListItem{ Text="Working Seance Month"},
                                            new SelectListItem{ Text="January", Value = "1" },
                                            new SelectListItem{ Text="February", Value = "2" },
                                            new SelectListItem{ Text="March", Value = "3" },
                                            new SelectListItem{ Text="April", Value = "4" },
                                            new SelectListItem{ Text="May", Value = "5" },
                                            new SelectListItem{ Text="June", Value = "6" },
                                            new SelectListItem{ Text="July", Value = "7" },
                                            new SelectListItem{ Text="Augast", Value = "8" },
                                            new SelectListItem{ Text="September", Value = "9" },
                                            new SelectListItem{ Text="Octomer", Value = "10" },
                                            new SelectListItem{ Text="November", Value = "11" },
                                            new SelectListItem{ Text="December", Value = "12" }
                                         }, new { @id = "StartMonth", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })

                @Html.ValidationMessageFor(model => model.StartMonth, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.EndYear, ViewBag.Year as IEnumerable<SelectListItem>, "Working Seance Year", new { @id = "StartYear", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })
                @Html.ValidationMessageFor(model => model.EndYear, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(x => x.EndMonth, new List<SelectListItem>
                                         {
                                            new SelectListItem{ Text="Working Seance Month"},
                                            new SelectListItem{ Text="January", Value = "1" },
                                            new SelectListItem{ Text="February", Value = "2" },
                                            new SelectListItem{ Text="March", Value = "3" },
                                            new SelectListItem{ Text="April", Value = "4" },
                                            new SelectListItem{ Text="May", Value = "5" },
                                            new SelectListItem{ Text="June", Value = "6" },
                                            new SelectListItem{ Text="July", Value = "7" },
                                            new SelectListItem{ Text="Augast", Value = "8" },
                                            new SelectListItem{ Text="September", Value = "9" },
                                            new SelectListItem{ Text="Octomer", Value = "10" },
                                            new SelectListItem{ Text="November", Value = "11" },
                                            new SelectListItem{ Text="December", Value = "12" }
                                         }, new { @id = "EndMonth", @style = "width: 100%;    padding: 5px; border: 1px solid #ccc; border-radius: 4px;" })

                @Html.ValidationMessageFor(model => model.EndMonth, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
 