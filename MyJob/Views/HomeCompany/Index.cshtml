@model DAL.PostJobMst
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/HomeCompany/_MainCompanyLayOut.cshtml";
}
<script>
    function ClearField() {
        $("#Cid").val('');
        $("#JobCategory").val('');
        $("#RequireSkill").val('');
        $("#ExprienceRequire").val('');
        $("#IsEnable").val('');
    }
</script>
<div class="row " style="background-color: #ffeb3b0a;box-shadow: 0 1px 1px 0 rgb(44, 58, 1), 0 1px 2px 0 rgb(25, 66, 2), 0 2px 1px -2px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.05);
    border-radius: 23px;
    padding: 22px;">
    <div class="col-md-12 ">@*     margin-left: 796px; *@
        <a href="#" class="pull-right" data-toggle="modal" data-target="#ModalCompInfor"> <span><i class="fa fa-pencil" aria-hidden="true"></i></span> Update</a>
    </div>
    <div class="col-md-12 text-primary">
        @{Html.RenderAction("PartialCompanyHeadInfor", "HomeCompany");}
    </div>
</div>
<div class="row " style="background-color: #ffeb3b0a;box-shadow: 0 1px 1px 0 rgb(44, 58, 1), 0 1px 2px 0 rgb(25, 66, 2), 0 2px 1px -2px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.05);
    border-radius: 23px;
    padding: 22px;">
    <div class="col-md-12 ">
        @{Html.RenderAction("PartialComapnyJobPostList", "HomeCompany");}
    </div>
</div>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add Job Post</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                 @{Html.RenderAction("GetJobPost", "HomeCompany");}
                @*@Html.RenderPartial(PartialAddJobPost)*@

            </div>
        </div>
    </div>
</div>


<div class="modal" id="ModalUpdatePost">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Update Job Post</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @{Html.RenderAction("GetJobPostForUpdate", "HomeCompany");}
                @*@Html.RenderPartial(PartialAddJobPost)*@

            </div>
        </div>
    </div>
</div>

<div class="modal" id="ModalCompInfor">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Update Comapny Information</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @{Html.RenderAction("GetJobPost", "HomeCompany");}
                @*@Html.RenderPartial(PartialAddJobPost)*@

            </div>
        </div>
    </div>
</div>